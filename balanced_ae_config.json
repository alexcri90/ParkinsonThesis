{
  "data": {
    "batch_size": 6
  },
  "model": {
    "name": "balanced_autoencoder_256",
    "latent_dim": 256
  },
  "training": {
    "num_epochs": 150,
    "learning_rate": 5e-5,
    "weight_decay": 1e-6,
    "grad_clip": 1.0,
    "loss_type": "mse"
  },
  "scheduler": {
    "type": "reduce_lr",
    "factor": 0.5,
    "patience": 5,
    "min_lr": 1e-7
  },
  "directories": {
    "output_dir": "trained_models/balanced_models"
  }
}